
# ~/.ssh/config

# Jump host
Host bastiao
    HostName gmcan.unmsm.edu.pe
    Port 7722
    User carlos
    IdentityFile ~/.ssh/id_ed25519
    ControlMaster auto
    ControlPath ~/.ssh/cm-%r@%h:%p
    ControlPersist 10m

# Direct login to cluster head node “huk”
Host huk
    HostName 192.168.16.100
    User carlos
    IdentityFile ~/.ssh/id_ed25519
    ProxyJump bastiao
    ForwardAgent yes 
    ControlMaster auto
    ControlPath ~/.ssh/cm-%r@%h:%p
    ControlPersist 10m


# Existing direct hosts via bastiao
Host cn128
    HostName 192.168.16.128
    User carlos
    IdentityFile ~/.ssh/id_ed25519
    ProxyJump bastiao
    ControlMaster auto
    ControlPath ~/.ssh/cm-%r@%h:%p
    ControlPersist 10m

Host cn98
    HostName 192.168.16.98
    User carlos
    IdentityFile ~/.ssh/id_ed25519
    ProxyJump bastiao
    ControlMaster auto
    ControlPath ~/.ssh/cm-%r@%h:%p
    ControlPersist 10m

